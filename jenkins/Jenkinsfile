pipeline {   
    agent none 
    stages {
        stage('Build') {
            agent {
                docker {
                    image 'w0sephiroth/myjekyll:3.8'
                    args '-v $PWDsrvjekyll -v homeappjekyllbundleusrlocalbundle'
                }
            }
            steps {
                sh 'jekyll build'
            }
        }
        stage('Deploy') { 
            agent none
            steps {
                sh './jenkins/scripts/deploy.sh' 
            }
        }
    }
}